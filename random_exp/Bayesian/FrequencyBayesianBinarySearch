# ds = fetch_results_as_xarray(
#     job.result_handles, qubits,
#     {"n_shots": np.arange(1, node.parameters.max_shots + 1), "repetition": np.arange(1, n_reps + 1)}
# )

    # ds = fetch_results_as_xarray(
    #     job.result_handles, qubits, {"N": np.linspace(1, n_runs, n_runs)}
    # )


    # %% Plotting

# %%
# %%  Simulation

alpha = 0.01
beta = 0.8
f = 1.e6
df = 0.0e6
T = 10000e-9

n_shots = 50
mu = -1e6
sigma = 1e6

taus = []
mus = []
sigmas = []
dfs = []
outcomes = []

tau = 0
for i in range(n_shots):
    tau = (np.sqrt(16*np.pi**2*sigma**2) - 1/T)/(8 * np.pi**2 * sigma**2)
    # tau = tau + 20e-9
    df = 1/(4*tau) - mu
    
    # df = 0
    ps = np.array([0.5 + m /2 *(alpha + beta * np.exp(-tau / T) * np.cos(2*np.pi*(f+df)*tau)) for m in [-1, 1]])
    ps = ps / np.sum(ps)
    outcome = np.random.choice([-1, 1], p=ps)
    # outcome = outcomes[i]
    outcomes.append(outcome)

    exponential = np.exp(-tau / T - 2*np.pi**2 * sigma**2 * tau**2)
    mu = mu - (2 * np.pi * outcome * beta * sigma**2 * tau * exponential) / (1 + alpha * outcome)
    sigma = np.sqrt(sigma**2 - (4 * np.pi**2 * beta**2 * sigma**4 * tau**2 * exponential**2) / (1 + alpha * outcome)**2)
    taus.append(tau)
    mus.append(mu)
    sigmas.append(sigma)
    dfs.append(df)


fig, axs = plt.subplots(5, 1, figsize=(8, 8), sharex=True)

axs[0].plot(outcomes, label='outcome', color='k')
axs[0].set_ylabel('Outcome')
axs[0].legend()

axs[1].plot(sigmas, label='sigma', color='tab:green')
axs[1].set_ylabel('Sigma')
axs[1].set_xlabel('Iteration')
axs[1].legend()

axs[2].plot(mus, label='mu', color='tab:orange')
axs[2].set_ylabel('Mu')
axs[2].legend()

axs[3].plot(taus, label='tau', color='tab:blue')
axs[3].set_ylabel('Tau')
axs[3].legend()

axs[4].plot(dfs, label='df', color='tab:red')
axs[4].set_ylabel('Df')
axs[4].set_xlabel('Iteration')
axs[4].legend()

plt.tight_layout()
plt.show()

print("mu: ", mus[-1]*1e-6, "MHz")
print("sigma: ", sigmas[-1]*1e-6, "MHz")
print("tau: ", taus[-1]*1e9, "ns")
